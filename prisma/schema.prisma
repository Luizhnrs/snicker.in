datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-ts"
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String?
  password String
  contact  String
  address  Address?
  Requests String
}

// Address is an embedded document
type Address {
  street       String
  cep          String
  neighborhood String
  city         String
  state        String
}
